@if (Items == null)
{
    <Loading />
}
else
{

    @for (int i = 0; i < Items.Count; i = i + 3)
    {
        int max = i + 3;
        <div class="row row-cols-1 row-cols-md-3">
            @for (int j = i; j < max; j++)
            {
                if (j < Items.Count)
                {
                    <RssCard Item="@Items[j]"></RssCard>
                }
                else
                {
                    <div class="col mb-4"></div>
                }

            }
        </div>
    }
}

@code {
    private int Count = 15;

    [Parameter]
    public List<RssItem> Items { get; set; }
}