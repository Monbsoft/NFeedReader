@if (Items == null)
{
    <Loading />
}
else
{

    @for (int i = 0; i < Items.Count; i = i + 3)
    {
        int max = Math.Min(i + 3, Items.Count);
        <div class="row row-cols-1 row-cols-md-3">
            @for (int j = i; j < max; j++)
            {
                <RssCard Item="@Items[j]"></RssCard>
            }
        </div>
    }
}

@code {
    private int Count = 15;

    [Parameter]
    public List<RssItem> Items { get; set; }
}